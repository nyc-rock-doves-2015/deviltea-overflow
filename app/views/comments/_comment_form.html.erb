<%= form_for @comment, url: {action: "create"}, html: {class: "comment-form"} do |f| %>
  <% f.hidden_field :user_id, value: @comment.user_id %>
  <% f.hidden_field :commentable_id, value: @comment.commentable_id %>
  <%= f.label "Comment:" %>
  <%= f.text_field(:content, size:100) %>
  <%= f.submit "Post Comment" %>
<% end %>
